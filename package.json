{
  "name": "next-feature-flags",
  "version": "0.0.6",
  "description": "A package to enable feature-flag support on Next.js via cookies and environment variables",
  "scripts": {
    "preversion": "npm test",
    "test": "jest",
    "_clear": "rimraf build/compiled/*",
    "_tsc": "tsc",
    "_make-bundle": "node build/make-bundle.cjs",
    "build": "run-s _clear _tsc _make-bundle",
    "watch": "tsc --watch",
    "version": "npm run build",
    "postversion": "git push && git push --tags && rm -rf build/compiled"
  },
  "keywords": [
    "nextjs",
    "feature-flags",
    "react",
    "cookies"
  ],
  "author": "asantos00",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/asantos00/next-feature-flags",
    "type": "git"
  },
  "main": "build/compiled/index.js",
  "types": "build/compiled/index.d.ts",
  "type": "module",
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "jest": "^28.1.0",
    "jsdom": "^19.0.0",
    "next": "^12.1.6",
    "npm-run-all": "^4.1.5",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.72.1",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  },
  "files": [
    "build/compiled/*",
    "index.d.ts"
  ]
}
